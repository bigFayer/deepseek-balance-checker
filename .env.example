# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 服务器端口 (可选，默认为 3000)
PORT=3000

# 运行环境 (development 或 production)
NODE_ENV=development

# 生产环境允许的源 (可选)
ALLOWED_ORIGIN=https://your-domain.com

# DeepSeek API 配置 (可选，用于测试)
DEEPSEEK_API_KEY=sk-your-api-key-here

# 安全配置
# 是否启用安全响应头 (默认: true)
ENABLE_SECURITY_HEADERS=true

# 是否启用请求日志 (默认: true)
ENABLE_REQUEST_LOGGING=true

# 是否验证请求来源 (默认: false)
VALIDATE_ORIGIN=false

# IP白名单 (逗号分隔，留空表示不限制)
ALLOWED_IPS=

# API密钥最小长度 (默认: 40)
MIN_API_KEY_LENGTH=40